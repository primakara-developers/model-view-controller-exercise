<!DOCTYPE html>
<title>EJS Is Fun</title>
<!-- CSS (load bootstrap from a CDN) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<style>
  body {
    padding-top: 50px;
  }
</style>
</head>

<body class="container">

  <header>
    <%- include('../components/header'); %>
  </header>

  <main>
    <div class="jumbotron">
      <h1>Your Todo List</h1>
      <ul class="list-unstyled d-flex justify-content-start">
        <li class="mx-md-1">
          <span class="badge badge-danger">Important, Urgent</span>
        </li>
        <li class="mx-md-1">
          <span class="badge badge-warning">Important, Not Urgent</span>
        </li>
        <li class="mx-md-1">
          <span class="badge badge-primary">Not Important, Urgent</span>
        </li>
        <li class="mx-md-1">
          <span class="badge badge-success">Not Important, Not Urgent</span>
        </li>
      </ul>

      <div class="mt-4">
        <ul class="list-group list-group-flush">
          <% todos.forEach(function(todo){ %>
            <% if (todo.tag_id==="a1" ) { %>
              <li class="d-flex list-group-item justify-content-between bg-danger mt-1">
                <span class="text-light">
                  <strong>
                    <%- todo.title %>
                  </strong>, <%- todo.description %>
                </span>
                <div class="d-flex">
                  <a class="mr-2 text-light" href="/edit/<%- todo.id %>">Edit</a>
                  <a class="text-light" href="/delete/<%- todo.id %>">Delete</a>
                </div>
              </li>
              <%} else if (todo.tag_id==="b2" ) {%>
                <li class="d-flex list-group-item justify-content-between bg-warning mt-1">
                  <span>
                    <strong>
                      <%- todo.title %>
                    </strong>, <%- todo.description %>
                  </span>
                  <div class="d-flex">
                    <a class="mr-2 text-dark" href="/edit/<%- todo.id %>">Edit</a>
                    <a class="text-dark" href="/delete/<%- todo.id %>">Delete</a>
                  </div>
                </li>
                <%} else if (todo.tag_id==="c3" ) {%>
                  <li class="d-flex list-group-item justify-content-between bg-primary mt-1">
                    <span class="text-light">
                      <strong>
                        <%- todo.title %>
                      </strong>, <%- todo.description %>
                    </span>
                    <div class="d-flex">
                      <a class="mr-2 text-light" href="/edit/<%- todo.id %>">Edit</a>
                      <a class="text-light" href="/delete/<%- todo.id %>">Delete</a>
                    </div>
                  </li>
                  <%} else {%>
                    <li class="d-flex list-group-item justify-content-between bg-success mt-1">
                      <span class="text-light">
                        <strong>
                          <%- todo.title %>
                        </strong>, <%- todo.description %>
                      </span>
                      <div class="d-flex">
                        <a class="mr-2 text-light" href="/edit/<%- todo.id %>">Edit</a>
                        <a class="text-light" href="/delete/<%- todo.id %>">Delete</a>
                      </div>
                    </li>
                    <% }; %>
                      <% }); %>
        </ul>
      </div>
    </div>
  </main>

  <footer>
    <%- include('../components/footer'); %>
  </footer>

</body>

</html>